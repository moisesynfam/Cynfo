@model Cynfo1._0.ViewModels.AdFormViewModel
@{
    ViewBag.Title = "Nuevo Anuncio";
    Layout = "~/Views/Shared/_Layout.cshtml";

}





@if (!Model.Beacons.Any())
{
    <p>No se ha definido ningun Area para publicar este anuncio</p>
}
else
{
    <br />
    <br />
    <div class="w3-row">
        <div class="w3-col w3-container" style="width: 20%"> </div>

        <div class="w3-col" style="width: 60%">
            <div class="w3-container w3-teal">
                @if (Model.Advertisement.Id == 0)
                {
                    <h2>
                        Nuevo Anuncio
                    </h2>
                }
                else
                {
                    <h2>
                        Editar Anuncio
                    </h2>
                }

            </div>

            <div class="w3-container w3-card-4">
                @using (Html.BeginForm("Save", "Advertisements", FormMethod.Post, new { enctype = "multipart/form-data", id = "adsForm" }))
                {
                    <div class="form-horizontal">
                        <br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(m => m.Advertisement.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Advertisement.Title, new { @class = "form-control", @Style = "width:100%" })
                                @Html.ValidationMessageFor(m => m.Advertisement.Title)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Advertisement.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(m => m.Advertisement.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Advertisement.Description)
                            </div>

                        </div>

                        @if (Model.Advertisement.Id != 0)
                        {
                        <br />
                        <div class="w3-container">
                            <img src="@Model.Advertisement.MediaURL" class="w3-animate-zoom" alt="Anuncio" style="width: 100%" />

                        </div>
                        <br />
                        }

                        <div class="form-group">

                            @Html.DropDownListFor(m => m.Advertisement.BeaconId, new SelectList(Model.Beacons, "Id", "AreaName"), "-Seleccione el Area-", new { @class = "form-control w3-select col-md-12" })
                            @Html.ValidationMessageFor(m => m.Advertisement.BeaconId)

                        </div>

                        @if (Model.Advertisement.Id != 0)
                        {
                        <div class="form-group">
                            <label class="control-label"> Imagen del Anuncio</label>
                            <input type="file" name="photo" />

                        </div>
                        }
                        else
                        {
                        <div class="form-group">
                            <label class="control-label col-md-2"> Imagen del Anuncio</label>
                            <input type="file" name="photo" class="col-md-10" data-val="true" data-val-required="La imagen es obligatoria" />
                            <span class="field-validation-valid" data-valmsg-for="photo" data-valmsg-replace="true"></span>
                        </div>
                        }
                        @Html.HiddenFor(m => m.Advertisement.Id)
                        @Html.AntiForgeryToken()



                        <button type="submit" class="w3-btn">Guardar</button>
                    </div>

                }
            </div>


            <div class="w3-col" style="width: 20%"> </div>
        </div>
    </div>

}
            
   

        

        @section scripts
{
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
    

    <script>

        $(document).ready(function() {
            $('#adsForm').on('submit', function (e) {
                var form = $("#adsForm");
                form.validate();

                if (form.valid()) {
                    e.preventDefault();
                    var dialog = bootbox.dialog({

                        message: '<div class="w3-center">' +
                            '<div class=""><i class="fa fa-cog fa-spin fa-3x fa-fw"></i></div>' +
                            '<p class="">Espere mientras se publica el anuncio</p>' +
                            '</div> ',
                        closeButton: false,
                        title: '<div class="w3-center">Procesando Anuncio</div>'

                    });

                    var url = $(this).attr("action");
                    console.log(url);
                    var formData = new FormData($(this)[0]);
                    $.ajax({
                        url: url,
                        type: "POST",
                        data: formData,
                        success: function (resp) {
                            console.log("Created Succesfully");

                            window.location.href = '/Advertisements/Index';

                        },
                        contentType: false,
                        processData: false,
                        error: function (jqXHR, status, error) {
                            console.log(jqXHR);
                            console.log(status);
                            console.log(error);

                        }

                    });

                } else {
                    
                    console.log("Invalid");
                    return null;
                }

              
               

            });


        });


    </script>

}
