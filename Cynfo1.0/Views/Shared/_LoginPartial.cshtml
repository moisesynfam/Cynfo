@using Cynfo1._0.Models
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul class="">
            <li>
                @Html.ActionLink("Hola " + User.Identity.Name + "!", "Index", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            @if (User.IsInRole(UserRoles.GeneralAdmin))
            {
                <li>@Html.ActionLink("Registrar Negocio", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</li>
            }
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
            </ul>
    }
}
else
{
    <ul class="">
        <li><a class="waves-effect waves-light " href="#modal1">Iniciar Sesión</a></li>
        <li>@Html.ActionLink("Registrar Negocio", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
     </ul>





        }


