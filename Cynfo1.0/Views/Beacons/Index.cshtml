@model IEnumerable<Cynfo1._0.Models.Beacon>

@{
    ViewBag.Title = "Beacons & Areas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta name="viewport" content="width=device-width, initial-scale=1">

<h2>Beacons & Areas</h2>

<a href="@Url.Action("Create","Beacons")" class="btn btn-primary">Nuevo</a>
<br/>
<br/>
@if (!Model.Any())
{
    <p>
        No se ha agregado ningun Beacon aun.
    </p>
}
else
{
    <table id ="beacons-table"class="table  w3-border w3-hoverable w3-card-4 w3-">
        <thead>
            <tr class="w3-cyan">
                <th>Area</th>
                <th>ID Area</th>
                <th>Beacon Asignado</th>
                <th>Editar</th>
                <th>Borrar</th>
            </tr>
        <tbody>
            @foreach (var beacon in Model)
            {
                    <tr>
                        <td>@beacon.AreaName</td>
                        <td>@beacon.AreaId</td>
                        <td>@beacon.MACAddress</td>
                        <td><a href="@Url.Action("Edit", "Beacons", new {id = beacon.Id})"><i class="fa fa-pencil-square-o fa-3x fa-fw"></i></a></td>
                        <td><a data-beacon-id="@beacon.Id" class="js-delete"><i class="fa fa-times fa-3x fa-fw"></i></a></td>

                    </tr>
              

            }
        </tbody>
    </table>
}
<br/>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#beacons-table").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Desea eliminar este beacon?", function(result) {
                    if (result) {
                        $.ajax({    
                            url: "/api/beacons/" + button.attr("data-beacon-id"),
                            method: "DELETE",
                            success: function() {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });

            });


        });

    </script>

}


