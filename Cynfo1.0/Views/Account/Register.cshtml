@model Cynfo1._0.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar Negocio";
}

<h2></h2>

<div class="row">
    
    <div class="col s12 m8 offset-m2">
        <div class="card white">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                <div class="card-content black-text">
                    <span class="card-title">@ViewBag.Title.</span>

                    @Html.AntiForgeryToken()
                    <h4>Cree una cuenta nueva para el Negocio.</h4>
                    <hr/>
                    @Html.ValidationSummary("", new {@class = "text-danger"})

                    <div class="input-field">
                        @Html.LabelFor(m => m.CompanyName, new {@class = ""})
                        @Html.TextBoxFor(m => m.CompanyName, new {@class = ""})

                    </div>

                    <div class="input-field">
                        @Html.LabelFor(m => m.Email, new {@class = ""})
                        @Html.TextBoxFor(m => m.Email, new {@class = ""})

                    </div>
                    <div class="input-field">
                        @Html.LabelFor(m => m.Password, new {@class = ""})
                        @Html.PasswordFor(m => m.Password, new {@class = ""})

                    </div>
                    <div class="input-field">
                        @Html.LabelFor(m => m.ConfirmPassword, new {@class = ""})
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = ""})

                    </div>




                </div>
                <div class="card-action">
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" class="btn btn-default" value="Registrar"/>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
